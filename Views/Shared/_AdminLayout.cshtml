<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 智领学程后台管理系统</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="sb-nav-fixed">
    <!-- 顶部导航栏 -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- 网站名称 -->
        <a class="navbar-brand ps-3" href="@Url.Action("Dashboard", "Admin")">智领学程管理系统</a>

        <!-- 侧边栏切换按钮 -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>

        <!-- 顶部导航栏右侧内容 -->
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i> 管理员
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">设置</a></li>
                    <li><a class="dropdown-item" href="#!">更改密码</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">退出登录</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- 页面内容 -->
    <div id="layoutSidenav">
        <!-- 侧边栏 -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">主菜单</div>
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            仪表盘
                        </a>

                        <div class="sb-sidenav-menu-heading">用户管理</div>
                        <a class="nav-link" href="@Url.Action("ManageStudents", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-graduate"></i></div>
                            学生管理
                        </a>
                        <a class="nav-link" href="@Url.Action("ManageTeachers", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chalkboard-teacher"></i></div>
                            教师管理
                        </a>
                        <a class="nav-link" href="@Url.Action("ManageParents", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-friends"></i></div>
                            家长管理
                        </a>

                        <div class="sb-sidenav-menu-heading">学校管理</div>
                        <a class="nav-link" href="@Url.Action("ManageSchools", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-school"></i></div>
                            学校管理
                        </a>
                        <a class="nav-link" href="@Url.Action("ManageClasses", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            班级管理
                        </a>

                        <div class="sb-sidenav-menu-heading">系统设置</div>
                        <a class="nav-link" href="#!">
                            <div class="sb-nav-link-icon"><i class="fas fa-cog"></i></div>
                            系统设置
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">当前登录:</div>
                    管理员
                </div>
            </nav>
        </div>

        <!-- 主内容区域 -->
        <div id="layoutSidenav_content">
            <main>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="关闭"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="关闭"></button>
                    </div>
                }

                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; 2025 智领学程. 保留所有权利.</div>
                        <div>
                            <a href="#">隐私政策</a> &middot;
                            <a href="#">用户协议</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JavaScript引用 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"></script>
    <script src="~/js/admin.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>