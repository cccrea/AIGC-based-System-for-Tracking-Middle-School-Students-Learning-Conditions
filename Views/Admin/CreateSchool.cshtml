@model test4.Models.School
@{
    ViewData["Title"] = "添加学校";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">添加学校</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">仪表盘</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("ManageSchools", "Admin")">学校管理</a></li>
        <li class="breadcrumb-item active">添加学校</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-school me-1"></i>
                    学校信息
                </div>
                <div class="card-body">
                    <form asp-action="CreateSchool" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("ManageSchools", "Admin")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> 返回列表
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> 保存
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    提示信息
                </div>
                <div class="card-body">
                    <p class="card-text">添加学校时，请确保提供以下信息：</p>
                    <ul>
                        <li>学校的完整名称</li>
                        <li>学校的详细地址</li>
                        <li>学校的联系电话</li>
                    </ul>
                    <p class="card-text">学校添加后，您可以为该学校添加班级和师生。</p>
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>提示：</strong> 学校名称是必填项，请确保输入正确的学校名称。
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}