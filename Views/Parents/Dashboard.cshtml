    margin-top: 10px;
    font-size: 12px;
}

.interaction-legend-item {
    display: flex;
    align-items: center;
    margin-left: 15px;
}

.interaction-legend-color {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 5px;
}

/* 让交流次数区域清晰分离 */
#interaction-details {
    border-top: 1px solid #eee;
    padding-top: 15px;
    margin-top: 15px;
}
        /* 添加紫色样式类 */
        .bg-purple {
            background-color: #9c27b0;
            color: white;
        }

        /* 调整交流指标图表样式 */
        .interaction-legend-item .badge {
            padding: 4px 8px;
        }

        /* 提高图表清晰度 */
        .chart-container {
            background-color: white;
            padding: 8px;
            border-radius: 4px;
        }

        /* 图表说明样式 */
        #activity-legend .badge {
            padding: 4px 8px;
        }

/* 交流频率指标动画效果 */
@@keyframes star-pulse {
    0% { transform: scale(1); }
