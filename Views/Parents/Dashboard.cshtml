    100% { transform: scale(1); }
}

.pulse-star {
    animation: star-pulse 1s infinite;
}

/* 添加响应式调整 */
@@media (max-width: 768px) {
    #interaction-chart {
        height: 300px !important;
    }
    
    #interaction-details .table th,
    #interaction-details .table td {
        padding: 0.5rem;
        font-size: 0.85rem;
    }
}
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <!-- 左侧边栏 -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-title">智领学程</div>
                <div class="sidebar-subtitle">家长数据中心</div>
            </div>

            <div class="sidebar-menu">
                <div class="menu-item active">
                    <div class="menu-icon"><i class="fas fa-chart-line"></i></div>
                    <div class="menu-text">学习数据分析</div>
                </div>
                <div class="menu-item">
                    <div class="menu-icon"><i class="fas fa-book"></i></div>
                    <div class="menu-text">学习内容查看</div>
                </div>
                <div class="menu-item">
                    <div class="menu-icon"><i class="fas fa-user-graduate"></i></div>
                    <div class="menu-text">孩子信息管理</div>
                </div>
                <div class="menu-item">
                    <div class="menu-icon"><i class="fas fa-cog"></i></div>
                    <div class="menu-text">设置</div>
                </div>
            </div>

            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <div class="user-name">@Model.ParentName</div>
                    <div class="user-role">家长账号</div>
                </div>
            </div>
        </div>

        <!-- 主要内容区域 -->
        <div class="main-content">
            <div class="page-header">
                <h1 class="page-title">@Model.StudentName 的学习数据</h1>
                <div class="time-filter">
                    <div class="time-filter-option active" data-period="week">本周</div>
                    <div class="time-filter-option" data-period="month">本月</div>
                    <div class="time-filter-option" data-period="all">总览</div>
                </div>
            </div>

            <!-- 学科选择标签 -->
            <div class="subject-tabs">
                <div class="subject-tab active" data-subject="chinese">语文</div>
                <div class="subject-tab" data-subject="math">数学</div>
                <div class="subject-tab" data-subject="english">英语</div>
                <div class="subject-tab" data-subject="all">全部科目</div>
            </div>

            <!-- 数据概览卡片 -->
            <div class="data-grid">
                <div class="data-card">
                    <div class="data-card-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="data-card-title">提问次数</div>
                    <div class="data-card-value" id="total-questions">0</div>
                    <div class="data-card-trend trend-up">
                        <i class="fas fa-arrow-up"></i> <span id="question-trend">0%</span> 较上期
                    </div>
                </div>

                <div class="data-card">
                    <div class="data-card-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="data-card-title">涉及知识点数</div>
                    <div class="data-card-value" id="total-knowledge-points">0</div>
                    <div class="data-card-trend trend-up">
                        <i class="fas fa-arrow-up"></i> <span id="knowledge-trend">0%</span> 较上期
                    </div>
                </div>

                <div class="data-card">
                    <div class="data-card-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <div class="data-card-title">理解程度</div>
                    <div class="data-card-value" id="mastery-percentage">0%</div>
                    <div class="progress-container">
                        <div class="progress-bar progress-understood" id="understood-progress" style="width: 0%;"></div>
                    </div>
                </div>
            </div>

            <!-- 学习活跃度图表 -->
            <div class="dashboard-card">
                <div class="card-title">
                    <i class="fas fa-chart-line card-title-icon"></i> 学习活跃度趋势
                </div>
                <!-- 添加缺失的canvas元素 -->
                <div class="chart-container">
                    <canvas id="activity-chart"></canvas>
                </div>
                <div id="knowledge-list" class="knowledge-list">
                    <!-- 知识点将在这里动态生成 -->
                </div>
            </div>

            <!-- 学习掌握情况 -->
            <div class="row">
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <div class="card-title">
                            <i class="fas fa-check-circle card-title-icon"></i> 知识点掌握情况
                        </div>
                        <div class="chart-container">
                            <canvas id="mastery-chart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dashboard-card">
                        <div class="card-title">
                            <i class="fas fa-list card-title-icon"></i> 理解程度分布
                        </div>
                        <div id="understanding-distribution">
                            <div class="knowledge-mastery">
                                <div class="mastery-indicator mastery-understood"></div>
                                <div>已透彻理解</div>
                                <div class="mastery-count" id="understood-count">0</div>
                            </div>
                            <div class="knowledge-mastery">
                                <div class="mastery-indicator mastery-learning"></div>
                                <div>正在学习中</div>
                                <div class="mastery-count" id="learning-count">0</div>
                            </div>
                            <div class="knowledge-mastery">
                                <div class="mastery-indicator mastery-difficult"></div>
                                <div>难以理解</div>
                                <div class="mastery-count" id="difficult-count">0</div>
                            </div>
                        </div>
                        <div class="chart-container mt-4">
                            <canvas id="understanding-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 知识点详情 -->
            <!-- 在知识点详情卡片内添加交流次数可视化部分 -->
            <div class="dashboard-card">
                <div class="card-title">
                    <i class="fas fa-comments card-title-icon"></i> 知识点交流频率
                </div>
                <div class="chart-container">
                    <canvas id="interaction-chart"></canvas>
                </div>
                <div id="interaction-details" class="mt-3">
                    <!-- 交流详情将在这里动态生成 -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 存储学生账号
        const studentAccount = "@Model.StudentAccount";

        // 当前选中的时间段和学科
        let currentPeriod = 'week';
        let currentSubject = 'chinese';

        // 加载数据的函数
        async function loadData() {
            try {
                showLoading();

                // 获取统计数据
                const statsResponse = await fetch(`/Parents/GetLearningStats?studentAccount=${studentAccount}&period=${currentPeriod}&subject=${currentSubject}`);
                const stats = await statsResponse.json();

                if (stats.code === 0) {
                    updateDashboardStats(stats.data);
                } else {
                    console.error("获取学习统计数据失败:", stats.msg);
                }

                // 获取知识点详情
                const knowledgeResponse = await fetch(`/Parents/GetKnowledgePointsDetails?studentAccount=${studentAccount}&period=${currentPeriod}&subject=${currentSubject}`);
                const knowledgeData = await knowledgeResponse.json();

                if (knowledgeData.code === 0) {
                    renderKnowledgePointsList(knowledgeData.data);
                    // 添加这一行，渲染交流次数图表
                    renderInteractionChart(knowledgeData.data);
                } else {
                    console.error("获取知识点详情失败:", knowledgeData.msg);
                }


                // 获取活跃度趋势数据
                const activityResponse = await fetch(`/Parents/GetActivityTrend?studentAccount=${studentAccount}&period=${currentPeriod}&subject=${currentSubject}`);
                const activityData = await activityResponse.json();

                if (activityData.code === 0) {
                    renderActivityChart(activityData.data);
                } else {
                    console.error("获取活跃度趋势数据失败:", activityData.msg);
                }

                hideLoading();
            } catch (error) {
                console.error("加载数据时出错:", error);
                hideLoading();
            }
        }

        // 更新仪表盘统计数据
        function updateDashboardStats(stats) {
            // 更新提问次数
            $("#total-questions").text(stats.totalQuestions);
            $("#question-trend").text(stats.questionTrend + "%");
            $("#question-trend").parent().removeClass("trend-up trend-down").addClass(stats.questionTrend >= 0 ? "trend-up" : "trend-down");
            $("#question-trend").prev("i").removeClass("fa-arrow-up fa-arrow-down").addClass(stats.questionTrend >= 0 ? "fa-arrow-up" : "fa-arrow-down");

            // 更新知识点数量
            $("#total-knowledge-points").text(stats.totalKnowledgePoints);
            $("#knowledge-trend").text(stats.knowledgeTrend + "%");
            $("#knowledge-trend").parent().removeClass("trend-up trend-down").addClass(stats.knowledgeTrend >= 0 ? "trend-up" : "trend-down");
            $("#knowledge-trend").prev("i").removeClass("fa-arrow-up fa-arrow-down").addClass(stats.knowledgeTrend >= 0 ? "fa-arrow-up" : "fa-arrow-down");

            // 更新理解程度
            $("#mastery-percentage").text(Math.round(stats.masteryPercentage) + "%");
            $("#understood-progress").css("width", stats.masteryPercentage + "%");

            // 更新理解程度分布
            $("#understood-count").text(stats.understoodCount);
            $("#learning-count").text(stats.learningCount);
            $("#difficult-count").text(stats.difficultCount);

            // 更新掌握情况图表
            renderMasteryChart(stats.masteryDistribution);

            // 更新理解程度图表
            renderUnderstandingChart(stats.understoodCount, stats.learningCount, stats.difficultCount);
        }

        // 渲染学习活跃度趋势图表（包含交流次数）
        function renderActivityChart(data) {
            const ctx = document.getElementById('activity-chart').getContext('2d');

            // 如果已经存在图表，则销毁它
            if (window.activityChart) {
                window.activityChart.destroy();
            }

            // 计算学习效率（知识点/提问比率）
            const knowledgeEfficiency = data.dates.map((_, index) => {
                const questions = data.questions[index];
                return questions > 0 ? parseFloat((data.knowledgePoints[index] / questions).toFixed(1)) : 0;
            });

            // 计算交流深度（交流次数/提问次数）- 每次提问平均的交流轮次
            const interactionDepth = data.dates.map((_, index) => {
                const questions = data.questions[index];
                return questions > 0 ? parseFloat((data.interactions[index] / questions).toFixed(1)) : 0;
            });

            window.activityChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.dates,
                    datasets: [
                        {
                            label: '提问次数',
                            data: data.questions,
                            borderColor: '#1e88e5',
                            backgroundColor: 'rgba(30, 136, 229, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: false,
                            yAxisID: 'y'
                        },
                        {
                            label: '交流次数',
                            data: data.interactions,
                            borderColor: '#9c27b0',
                            backgroundColor: 'rgba(156, 39, 176, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: false,
                            yAxisID: 'y'
                        },
                        {
                            label: '知识点数量',
                            data: data.knowledgePoints,
                            borderColor: '#4caf50',
                            backgroundColor: 'rgba(76, 175, 80, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: false,
                            yAxisID: 'y'
                        },
                        {
                            label: '交流深度',
                            data: interactionDepth,
                            borderColor: '#ff9800',
                            backgroundColor: 'rgba(255, 152, 0, 0)',
                            borderWidth: 2,
                            tension: 0.4,
                            pointStyle: 'rectRot',
                            pointRadius: 5,
                            fill: false,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 15
                            }
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: '数量'
                            },
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: '交流深度'
                            },
                            beginAtZero: true,
                            grid: {
                                drawOnChartArea: false
                            }
                        }
                    }
                }
            });

            // 添加图表说明
            const chartContainer = document.getElementById('activity-chart').parentNode;
            let legendEl = document.getElementById('activity-legend');

            if (!legendEl) {
                legendEl = document.createElement('div');
                legendEl.id = 'activity-legend';
                legendEl.className = 'mt-3 p-2 small bg-light rounded';
                legendEl.innerHTML = `
                    <div><i class="fas fa-info-circle me-1 text-primary"></i> <strong>学习活跃度指标说明：</strong></div>
                    <div class="mt-1"><span class="badge bg-primary me-1">提问次数</span> 学生发起的学习会话数量</div>
                    <div class="mt-1"><span class="badge bg-purple me-1">交流次数</span> 学生在学习过程中的跟进交流数量</div>
                    <div class="mt-1"><span class="badge bg-success me-1">知识点数量</span> 学生学习涉及的知识点总数</div>
                    <div class="mt-1"><span class="badge bg-warning text-dark me-1">交流深度</span> 每次提问的平均交流轮次，反映学习深入程度</div>
                `;
                chartContainer.after(legendEl);
            }
        }

        // 渲染掌握情况图表
        function renderMasteryChart(data) {
            const ctx = document.getElementById('mastery-chart').getContext('2d');

            // 如果已经存在图表，则销毁它
            if (window.masteryChart) {
                window.masteryChart.destroy();
            }

            window.masteryChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['已透彻理解', '正在学习中', '难以理解'],
                    datasets: [{
                        data: [data.understood, data.learning, data.difficult],
                        backgroundColor: [
                            '#4caf50',
                            '#2196f3',
                            '#f44336'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // 渲染理解程度图表
        function renderUnderstandingChart(understood, learning, difficult) {
            const ctx = document.getElementById('understanding-chart').getContext('2d');

            // 如果已经存在图表，则销毁它
            if (window.understandingChart) {
                window.understandingChart.destroy();
            }

            window.understandingChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['已透彻理解', '正在学习中', '难以理解'],
                    datasets: [{
                        label: '知识点数量',
                        data: [understood, learning, difficult],
                        backgroundColor: [
                            '#4caf50',
                            '#2196f3',
                            '#f44336'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        }

        // 渲染知识点列表
        function renderKnowledgePointsList(knowledgePoints) {
            const knowledgeList = document.getElementById('knowledge-list');

            if (knowledgePoints.length === 0) {
                knowledgeList.innerHTML = `
                    <div class="no-data">
                        <div class="no-data-icon"><i class="fas fa-search"></i></div>
                        <div>暂无数据</div>
                    </div>
                `;
                return;
            }

            let html = '';

            knowledgePoints.forEach(point => {
                // 计算总计数
                const total = point.understoodCount + point.learningCount + point.difficultCount;

                // 计算百分比
                const understoodPercent = Math.round((point.understoodCount / total) * 100) || 0;
                const learningPercent = Math.round((point.learningCount / total) * 100) || 0;
                const difficultPercent = Math.round((point.difficultCount / total) * 100) || 0;

                html += `
                    <div class="knowledge-item">
                        <div class="knowledge-name">${point.name}</div>
                        <div class="knowledge-stats">
                            <div class="stat-item">
                                <div class="stat-icon understood-bg"><i class="fas fa-check"></i></div>
                                ${point.understoodCount}
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon learning-bg"><i class="fas fa-sync-alt"></i></div>
                                ${point.learningCount}
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon difficult-bg"><i class="fas fa-times"></i></div>
                                ${point.difficultCount}
                            </div>
                        </div>
                    </div>
                            <div class="progress-container" style="margin-bottom: 10px; position: relative;">
            <div class="progress-bar progress-understood" style="width: ${understoodPercent}%; position: absolute;"></div>
            <div class="progress-bar progress-learning" style="width: ${learningPercent}%; position: absolute; left: ${understoodPercent}%;"></div>
            <div class="progress-bar progress-difficult" style="width: ${difficultPercent}%; position: absolute; left: ${understoodPercent + learningPercent}%;"></div>
        </div>
                `;
            });

            knowledgeList.innerHTML = html;
            
        }
        // 渲染知识点交流次数图表
        function renderInteractionChart(knowledgePoints) {
            const ctx = document.getElementById('interaction-chart').getContext('2d');

            // 如果已经存在图表，则销毁它
            if (window.interactionChart) {
                window.interactionChart.destroy();
            }

            // 准备数据
            const sortedPoints = [...knowledgePoints].sort((a, b) => b.followUpQuestions - a.followUpQuestions);
            const topPoints = sortedPoints.slice(0, 10); // 只显示交流次数最多的10个知识点

            const labels = topPoints.map(p => p.name);
            const interactionData = topPoints.map(p => p.followUpQuestions);

            // 创建柱状图
            window.interactionChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: '交流次数',
                        data: interactionData,
                        backgroundColor: 'rgba(54, 162, 235, 0.7)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y', // 水平柱状图
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return `交流次数: ${context.raw}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '交流次数'
                            },
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });

            // 显示交流详情表格
            renderInteractionDetails(topPoints);
        }

        // 渲染交流详情表格
        function renderInteractionDetails(knowledgePoints) {
            const container = document.getElementById('interaction-details');

            if (knowledgePoints.length === 0) {
                container.innerHTML = '<div class="text-center text-muted">暂无交流数据</div>';
                return;
            }

            // 创建表格
            let html = `
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>知识点</th>
                            <th>交流次数</th>
                            <th>理解状态</th>
                            <th>交流频率指标</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            knowledgePoints.forEach(point => {
                // 计算理解状态分布
                const total = point.understoodCount + point.learningCount + point.difficultCount;
                const understoodPercent = Math.round((point.understoodCount / total) * 100) || 0;

                // 计算交流频率指标 (1-5星)
                const interactionLevel = calculateInteractionLevel(point.followUpQuestions);

                // 确定理解状态背景色
                let statusClass = 'bg-warning text-dark'; // 默认为学习中 (黄色)
                if (understoodPercent >= 70) {
                    statusClass = 'bg-success text-white'; // 已理解 (绿色)
                } else if (understoodPercent <= 30) {
                    statusClass = 'bg-danger text-white'; // 难以理解 (红色)
                }

                html += `
                <tr>
                    <td>${point.name}</td>
                    <td>${point.followUpQuestions}</td>
                    <td><span class="badge ${statusClass}" style="padding: 5px 10px;">${understoodPercent}% 已理解</span></td>
                    <td>${renderStars(interactionLevel)}</td>
                </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            </div>
            <div class="text-muted small mt-2">
                <i class="fas fa-info-circle me-1"></i>
                交流频率指标反映学生对该知识点的关注度和互动程度
            </div>
            `;

            container.innerHTML = html;
        }

        // 计算交流频率指标 (1-5星)
        function calculateInteractionLevel(count) {
            if (count >= 20) return 5;
            if (count >= 15) return 4;
            if (count >= 10) return 3;
            if (count >= 5) return 2;
            return 1;
        }

        // 渲染星星评级
        function renderStars(level) {
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                if (i <= level) {
                    stars += '<i class="fas fa-star text-warning"></i>'; // 实心星星
                } else {
                    stars += '<i class="far fa-star text-muted"></i>'; // 空心星星
                }
            }
            return stars;
        }


        // 显示加载动画
        function showLoading() {
            const knowledgeList = document.getElementById('knowledge-list');
            knowledgeList.innerHTML = `
                        <div class="loading">
                            <div class="loading-spinner"></div>
                        </div>
                    `;
        }

        // 隐藏加载动画
        function hideLoading() {
            // 加载完成后自动处理
        }

